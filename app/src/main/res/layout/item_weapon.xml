<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llListWeaponItem"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardListWeaponItem"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="20dp"
        app:strokeColor="@color/White"
        app:strokeWidth="1dp">

        <!-- Weapon List Icon -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewListWeaponIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:background="@color/ValorantPinkRed"
            android:src="@drawable/weaponlistdisplayicon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewWeaponName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|start"
                android:padding="15dp"
                android:text="@string/odin"
                android:textSize="18sp"
                android:textColor="@color/ValorantWhite"
                android:fontFamily="@font/valorant_font" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>