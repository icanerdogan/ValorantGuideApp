                        android:layout_gravity="center"
                        android:paddingEnd="2dp"
                        android:fontFamily="@font/chakrapetch_regular"
                        android:text="ACTIVATE to prepare a gust of wind for a limited time. RE-USE the wind to propel Jett in the direction she is moving. If Jett is standing still, she propels forward."
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/ValorantWhite"
                        android:textSize="12sp" />
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/BlackTransparent30"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <!--Ability - 4-->
