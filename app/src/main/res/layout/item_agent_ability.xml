<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayoutItemAgentAbility"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlackTransparent70">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:strokeColor="@color/ValorantWhite"
        app:strokeWidth="1dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp"
            android:background="@color/ValorantPinkRed">

            <!--Ability - "-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Ability Name - 1-->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewAgentAbilityName1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="1dp"
                        android:fontFamily="@font/chakrapetch_bold"
                        android:text="Tailwind"
                        android:textColor="@color/ValorantWhite"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <!-- Ability Icon - 1-->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewAgentAbility1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/abilityicon" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Ability Description - 1-->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewAgentAbilityDescription1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="2dp"
                        android:fontFamily="@font/chakrapetch_regular"
                        android:text="ACTIVATE to prepare a gust of wind for a limited time. RE-USE the wind to propel Jett in the direction she is moving. If Jett is standing still, she propels forward."
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/ValorantWhite"
                        android:textSize="12sp" />
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/BlackTransparent30"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <!--Ability - 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

