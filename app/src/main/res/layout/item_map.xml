<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llListMapItem"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardListMapItem"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/ValorantPinkRed"
        app:strokeWidth="1dp">

        <!-- Map List Icon -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewListMapIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_to_black_rtl">
            <TextView
                android:id="@+id/textViewListMapName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="15dp"
                android:text="@string/ascent"
                android:textSize="20sp"
                android:textColor="@color/ValorantWhite"
                android:fontFamily="@font/valorant_font" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>