<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ValorantBlack">

    <!--Weapon Damage Ranges Item-->
    <LinearLayout
        android:id="@+id/llWeaponDetailDamage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--Weapon Damage Ranges  Bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewArrowWeaponDamage"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_arrow_right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/chakrapetch_bold"
                android:textColor="@color/ValorantWhite"
                android:text="Damage Ranges"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/Gray"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>
        <!--Weapon Damage Ranges Expandable Layout-->
        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandableLayoutWeaponDamage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayoutWeaponDamageFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/damage_manikin"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewWeaponDetailDamageFirstHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Head"
                            android:textSize="20sp"
                            android:textColor="@color/ValorantPinkRed"
                            android:fontFamily="@font/chakrapetch_bold"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewWeaponDetailDamageFirstBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Body"
                            android:textSize="20sp"
                            android:textColor="@color/ValorantPinkRed"
                            android:fontFamily="@font/chakrapetch_bold"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewWeaponDetailDamageFirstLeg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Leg"
                            android:textSize="20sp"
                            android:textColor="@color/ValorantPinkRed"
                            android:fontFamily="@font/chakrapetch_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutWeaponDamageSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/damage_manikin"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewWeaponDetailDamageSecondHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Head"
                            android:textSize="20sp"
                            android:textColor="@color/ValorantPinkRed"
                            android:fontFamily="@font/chakrapetch_bold"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewWeaponDetailDamageSecondBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Body"
                            android:textSize="20sp"
                            android:textColor="@color/ValorantPinkRed"
                            android:fontFamily="@font/chakrapetch_bold"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewWeaponDetailDamageSecondLeg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Leg"
                            android:textSize="20sp"
                            android:textColor="@color/ValorantPinkRed"
                            android:fontFamily="@font/chakrapetch_bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
    </LinearLayout>
</LinearLayout>