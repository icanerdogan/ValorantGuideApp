<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutMapDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".view.fragment.MapsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewMapSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ascent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BlackTransparent60" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMapName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/valorant_font"
            android:gravity="center"
            android:text="ASCENT"
            android:textColor="@color/ValorantWhite"
            android:textSize="30sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewCoordinates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/valorant_font"
            android:gravity="center"
            android:text="45°26'BF'N,12°20'Q'E"
            android:textColor="@color/ValorantWhite"
            android:textSize="15sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/map_example" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:text="@string/turn_off_map_detail"
        android:textSize="10sp"
        android:textColor="@color/ValorantWhite"
        android:fontFamily="@font/chakrapetch_regular"/>
</FrameLayout>