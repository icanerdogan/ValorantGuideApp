<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/ValorantBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/Gray"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKINS"
            android:textSize="20sp"
            android:textColor="@color/ValorantWhite"
            android:fontFamily="@font/chakrapetch_bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/Gray"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ValorantBlack"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutWeaponDetailSkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ValorantBlack"
            app:tabMode="scrollable"
            app:tabTextColor="@color/ValorantWhite"
            app:tabSelectedTextColor="@color/ValorantWhite"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerWeaponDetailSkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>